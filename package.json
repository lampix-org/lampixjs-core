{
  "name": "@lampix/core",
  "version": "0.7.15",
  "description": "Lampix application development library",
  "repository": {
    "type": "git",
    "url": "https://github.com/lampix-org/lampixjs-core"
  },
  "main": "lib/lampix.js",
  "module": "lib/lampix.js",
  "types": "lib/index.d.ts",
  "files": [
    "assets",
    "lib"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "docs": "typedoc --out docs src/index.ts --name Lampix.js --theme minimal --readme README.md",
    "build": "shx rm -rf ./lib && webpack",
    "build:docker:unix": "docker run -v $(pwd):/usr/lampixjs-sdk -w /usr/lampixjs-sdk -u $(id -u):$(id -g) -it --rm --name lampixjs-lib node:8 npm run build",
    "prepublishOnly": "npm run build",
    "precommit": "lint-staged"
  },
  "keywords": [
    "lampix"
  ],
  "author": "Lampix",
  "license": "MIT",
  "devDependencies": {
    "husky": "0.14.3",
    "lint-staged": "6.0.0",
    "shx": "0.3.2",
    "ts-loader": "4.4.2",
    "tslint": "5.11.0",
    "tslint-config-airbnb": "5.9.2",
    "typedoc": "0.9.0",
    "typescript": "2.9.2",
    "webpack": "4.16.3",
    "webpack-cli": "3.1.0"
  },
  "lint-staged": {
    "*.ts": [
      "tslint"
    ]
  },
  "dependencies": {
    "@types/lodash": "4.14.116"
  }
}
