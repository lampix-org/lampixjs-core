{
  "name": "lampix",
  "version": "1.0.0",
  "description": "Lampix application development library",
  "main": "lib/index.js",
  "module": "lib/esm/index.js",
  "types": "lib/types.d.ts",
  "scripts": {
    "docs": "typedoc --out docs src/index.ts --name Lampix.js --theme minimal --readme README.md",
    "clean": "shx rm -rf ./lib",
    "build": "npm run clean && rollup --c",
    "prepublish": "npm run build",
    "precommit": "node internals/precommit-scripts/ts-dry-run.js && lint-staged",
    "ts-dry-run": "tsc --noEmit"
  },
  "keywords": [
    "lampix"
  ],
  "author": "Lampix",
  "license": "MIT",
  "devDependencies": {
    "husky": "0.14.3",
    "lint-staged": "6.0.0",
    "rollup": "0.53.0",
    "rollup-plugin-commonjs": "8.2.6",
    "rollup-plugin-node-resolve": "3.0.0",
    "rollup-plugin-typescript": "0.8.1",
    "shx": "0.2.2",
    "ts-loader": "3.2.0",
    "tslint": "5.8.0",
    "tslint-config-airbnb": "5.4.2",
    "typedoc": "0.9.0",
    "typescript": "2.6.2"
  },
  "lint-staged": {
    "*.ts": [
      "tslint"
    ]
  }
}
