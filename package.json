{
  "name": "@lampix/core",
  "version": "0.6.3",
  "description": "Lampix application development library",
  "repository": {
    "type": "git",
    "url": "https://github.com/lampix-org/lampixjs-core"
  },
  "main": "lib/cjs/index.js",
  "module": "lib/esm/index.js",
  "types": "lib/cjs/index.d.ts",
  "scripts": {
    "docs": "typedoc --out docs src/index.ts --name Lampix.js --theme minimal --readme README.md",
    "build:umd": "shx rm -rf ./lib/umd && rollup --c",
    "build:esm": "shx rm -rf ./lib/esm && tsc --outDir lib/esm",
    "build:cjs": "shx rm -rf ./lib/cjs && tsc -m commonjs  --outDir lib/cjs",
    "build": "npm run build:umd && npm run build:cjs && npm run build:esm",
    "prepublishOnly": "npm run build",
    "precommit": "lint-staged"
  },
  "keywords": [
    "lampix"
  ],
  "author": "Lampix",
  "license": "MIT",
  "devDependencies": {
    "husky": "0.14.3",
    "lint-staged": "6.0.0",
    "rollup": "0.53.0",
    "rollup-plugin-commonjs": "8.2.6",
    "rollup-plugin-node-resolve": "3.0.0",
    "rollup-plugin-typescript": "0.8.1",
    "shx": "0.2.2",
    "ts-loader": "3.2.0",
    "tslint": "5.8.0",
    "tslint-config-airbnb": "5.4.2",
    "typedoc": "0.9.0",
    "typescript": "2.6.2"
  },
  "lint-staged": {
    "*.ts": [
      "tslint"
    ]
  },
  "dependencies": {}
}
