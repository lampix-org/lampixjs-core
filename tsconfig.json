{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "ES5",
    "module": "commonjs",
    "lib": ["dom", "es2015", "es2017"],
    "downlevelIteration": true,
    "sourceMap": true,
    "declaration": true,
    "allowJs": false,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "outDir": "./lib",
    "rootDir": "src",
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules",
    "lib",
    "etc",
    "temp"
  ],
  "files": [
    "package.json"
  ]
}
