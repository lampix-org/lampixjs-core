{
  "compilerOptions": {
    "baseUrl": "src",
    "module": "es2015",
    "target": "ES5",
    "lib": ["es2015", "es2017", "dom"],
    "declaration": true,
    "allowJs": false,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules",
    "lib"
  ]
}
