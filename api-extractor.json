{
  "$schema": "https://dev.office.com/json-schemas/api-extractor/api-extractor.schema.json",
  "compiler" : {
    "configType": "tsconfig",
    "rootFolder": ".",
    "overrideTsconfig": {
      "compilerOptions": {
        "baseUrl": "src",
        "target": "ES5",
        "module": "commonjs",
        "lib": ["es2015", "dom"],
        "sourceMap": true,
        "declaration": true,
        "allowJs": false,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "outDir": "./"
      },
      "exclude": [
        "node_modules",
        "lib",
        "etc",
        "temp"
      ]
    }
  },
  "project": {
    "entryPointSourceFile": "lib/index.d.ts"
  },
  "apiJsonFile": {
    "enabled": true,
    "outputFolder": "lib"
  },
  "apiReviewFile": {
    "enabled": true,
    "apiReviewFolder": "etc"
  }
}
